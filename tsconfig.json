{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "pages/**/*.jsx",
    "pages/**/*.js",
    "helpers/**/*.ts",
    "helpers/**/*.tsx",
    "helpers/**/*.jsx",
    "helpers/**/*.js",
    "public/**/*.tsx",
    "public/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    ".firebase",
    "coverage",
    "deploy",
    "design",
    "emulators-data",
    "cypress.config.ts",
    "cypress",
    "**/*.cy.ts",
    "**/*.cy.js"
  ]
}
